<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <gradient

                android:startColor="#FF6161"
                android:endColor="#FF61DC"/>
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#2f2f34" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>